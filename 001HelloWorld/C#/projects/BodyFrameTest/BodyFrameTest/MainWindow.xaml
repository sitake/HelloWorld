<Window x:Class="BodyFrameTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Image Name="imageColor" Stretch="UniformToFill"/>
        <Canvas Name="CanvasBody" Height="{Binding ElementName=imageColor, Path=ActualHeight}" Width="{Binding ElementName=imageColor,Path=ActualWidth}"/>
    </Grid>
</Window>
