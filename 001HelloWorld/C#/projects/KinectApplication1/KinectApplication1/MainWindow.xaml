<Window x:Class="KinectApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closing="Window_Closing"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
            <Image Name="imageRGB" Source="{Binding Path=ImageSource}" Stretch="UniformToFill" Opacity="1"/>
            <Image Name="imageDepth" Stretch="UniformToFill" Opacity="0"/>


    </Grid>
</Window>
